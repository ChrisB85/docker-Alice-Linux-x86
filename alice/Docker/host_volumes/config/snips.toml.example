[snips-common]
#bus = "mqtt"
mqtt = "mqtt:1883"
###mqtt = "mqtt:1883" for communication with mosquitto docker container.
#audio = ["+@mqtt"]
assistant = "/home/pi/ProjectAlice/assistant"
#user_dir = "/var/lib/snips"
#verbose = "info"

## MQTT authentication
#mqtt_username = ""
#mqtt_password = ""

## MQTT TLS configuration
#mqtt_tls_hostname = ""
#mqtt_tls_disable_root_store = false
#mqtt_tls_cafile = ""
#mqtt_tls_capath = ""
#mqtt_tls_client_cert = ""
#mqtt_tls_client_key = ""

[snips-analytics]

[snips-asr]
#no_fst_map = true
#beam_size = 8
###model = "/usr/share/snips/asr"
model = "/usr/share/snips/snips-asr-model-en-500MB"
#audio = ["+@mqtt"]
#partial = false
#partial_period_ms = 250

[snips-asr-google]
#credentials = "/usr/share/snips/googlecredentials.json"

[snips-audio-server]
#frame = 256
bind = "default@mqtt"
#mike = "Built-in"
disable_playback = true
disable_capture = true
#alsa-capture = "ALSA"
#alsa-playback = "ALSA"
#hijack = false
#no-mike = false

[snips-dialogue]
#resources = "/usr/share/snips/dialogue"
session_timeout = 30
###session_timeout = 10
lambda_timeout = 10
retry_count = 0
#sound_feedback_disabled_default = false
#default_site_id = "default"
#hotword_coalescing_duration = 1
#site_group = ""
#sites_in_same_group_default = false

[snips-hotword]
model = ["/home/pi/ProjectAlice/trained/hotwords/snips_hotword/hey_snips=0.5"]
#hotword_id = "default"
#sensitivity = "0.5"
#audio = ["+@mqtt"]
#no_vad_inhibitor = false
vad_messages = true

[snips-injection]
#asr_model = "/usr/share/snips/asr"
#nlu_engine = "/usr/share/snips/nlu_engine"
#keep_nfirst = 3

[snips-nlu]
#model = "/usr/share/snips/nlu"
#num_intent_alternatives = 2
#num_slot_alternatives = 2

[snips-tts]
## Choose one tts provider (defaults to picotts)
#provider = "customtts"
## customtts specific configuration (here configured to use picotts using the en-US language)
## available placeholder variables : %%OUTPUT_FILE%%, %%LANG%%, %%TEXT%%
#customtts = { command = "["pico2wave", "-w", "%%OUTPUT_FILE%%", "-l", "en-US", "%%TEXT%%"] }"






